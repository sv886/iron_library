<div class="container">
    <div class="details">
      <h2>Add New Book</h2>
      <% if @book.errors.any? %>
        <% @book.errors.full_messages.each do |error| %>
          <p class="alert alert-danger"><strong>Input Error: <%= error %></strong></p>
        <% end %>
      <% end %>

      <%= form_for @book do |book| %>

        <div class="form-group">
          <%= book.label :photo_url %>
          <%= book.text_field :photo_url, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= book.label :title %>
          <%= book.text_field :title, class: "form-control" %>
        </div>

        <%= book.label :author_id %>
        <%= book.collection_select(:author_id, Author.all.order("last_name asc"), :id, :full_name, {prompt: "Select Author"}) %>

        <div class="form-group">
          <%= book.label :price %>
          <%= book.text_field :price, class: "form-control" %>
        </div>

        <div class="">
          <%= book.submit "Add New Book", class: "btn btn-primary" %>
        </div>

      <% end %>
      <hr>
    </div>
</div>
